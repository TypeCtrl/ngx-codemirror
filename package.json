    "jasmine-core": "3.3.0",
    "karma": "3.1.3",
    "karma-chrome-launcher": "2.2.0",
    "karma-cli": "2.0.0",
    "karma-coverage-istanbul-reporter": "2.0.4",
    "karma-jasmine": "2.0.1",
    "karma-jasmine-html-reporter": "1.4.0",
    "karma-mocha-reporter": "2.2.5",
    "ng-packagr": "4.4.5",
    "rimraf": "2.6.2",
    "semantic-release": "15.13.0",
    "ts-node": "7.0.1",
    "tsickle": "0.34.0",
    "tslint": "5.11.0",
    "typescript": "3.1.6"
