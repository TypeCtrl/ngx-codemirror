{
  "name": "@ctrl/ngx-codemirror",
  "version": "1.3.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ts-node build.ts",
    "publish": "cd dist && npm publish --access public",
    "test": "ng test --browsers=ChromeCI",
    "test:ci": "ng test --single-run --code-coverage --no-progress --browsers=ChromeCI",
    "lint": "ng lint --type-check -t stylish",
    "lint:fix": "ng lint --fix --type-check -t stylish",
    "e2e": "ng e2e",
    "bundlesize": "npx bundlesize",
    "ghpages": "ng build --prod --no-progress --baseHref='/ngx-codemirror/'",
    "travis-deploy-once": "travis-deploy-once",
    "commit": "git-cz",
    "commitlint": "commitlint -e $GIT_PARAMS",
    "semantic-release": "cd dist && semantic-release"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "5.2.10",
    "@angular/common": "5.2.10",
    "@angular/compiler": "5.2.10",
    "@angular/core": "5.2.10",
    "@angular/forms": "5.2.10",
    "@angular/http": "5.2.10",
    "@angular/platform-browser": "5.2.10",
    "@angular/platform-browser-dynamic": "5.2.10",
    "@angular/router": "5.2.10",
    "@ctrl/ngx-github-buttons": "1.0.9",
    "bootstrap": "4.1.0",
    "codemirror": "5.36.0",
    "core-js": "2.5.5",
    "rxjs": "6.1.0",
    "zone.js": "0.8.26"
  },
  "devDependencies": {
    "@angular/cli": "1.7.4",
    "@angular/compiler-cli": "5.2.10",
    "@angular/language-service": "5.2.10",
    "@commitlint/cli": "6.1.3",
    "@commitlint/config-conventional": "6.1.3",
    "@types/codemirror": "0.0.56",
    "@types/fs-extra": "5.0.2",
    "@types/jasmine": "2.8.6",
    "@types/jasminewd2": "2.0.3",
    "@types/node": "9.6.7",
    "codelyzer": "4.2.1",
    "commitizen": "2.9.6",
    "cpx": "1.5.0",
    "cz-conventional-changelog": "2.1.0",
    "husky": "0.15.0-rc.13",
    "fs-extra": "5.0.0",
    "jasmine-core": "2.99.1",
    "jasmine-spec-reporter": "4.2.1",
    "karma": "2.0.2",
    "karma-chrome-launcher": "2.2.0",
    "karma-cli": "1.0.1",
    "karma-coverage-istanbul-reporter": "1.4.2",
    "karma-jasmine": "1.1.1",
    "karma-jasmine-html-reporter": "0.2.2",
    "ng-packagr": "2.4.2",
    "protractor": "5.3.1",
    "rimraf": "2.6.2",
    "semantic-release": "15.1.8",
    "travis-deploy-once": "4.4.1",
    "ts-node": "6.0.2",
    "tslint": "5.9.1",
    "typescript": "2.6.2"
  },
  "release": {
    "branch": "master"
  },
  "husky": {
    "hooks": {
      "commit-msg": "npm run commitlint"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "bundlesize": [
    {
      "path": "./dist/bundles/ctrl-ngx-codemirror.umd.min.js",
      "maxSize": "2 kB"
    },
    {
      "path": "./dist/esm2015/ctrl-ngx-codemirror.js",
      "maxSize": "3 kB"
    },
    {
      "path": "./dist/esm5/ctrl-ngx-codemirror.js",
      "maxSize": "2 kB"
    }
  ]
}
